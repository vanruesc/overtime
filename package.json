{
	"name": "overtime",
	"version": "0.1.1",
	"description": "Overtime is a stopwatch library that visualises time limits in 2D.",
	"homepage": "https://github.com/vanruesc/overtime",
	"main": "build/overtime",
	"jsnext:main": "src/overtime",
	"license": "Zlib",

	"keywords": [
		"time limit",
		"stopwatch",
		"canvas",
		"visualisation"
	],

	"author": {
		"name": "Raoul van Rueschen",
		"email": "vanruesc@fh-brandenburg.de"
	},

	"repository": {
		"type": "git",
		"url": "https://github.com/vanruesc/overtime.git"
	},

	"bugs": {
		"url": "https://github.com/vanruesc/overtime/issues"
	},

	"scripts": {
		"jshint:banner": "jshint banner.js",
		"jshint:test": "jshint test",
		"jshint:lib": "jshint src",
		"jshint": "npm run jshint:banner && npm run jshint:test && npm run jshint:lib",
		"rollup": "rollup -f umd -n Overtime -i src/overtime.js -o build/overtime.js",
		"uglify": "uglifyjs build/overtime.js -c -m -o build/overtime.min.js",
		"mocha": "mocha test",
		"yuidoc": "yuidoc src -q -c yuidoc.json",
		"prebuild": "npm run jshint",
		"build": "npm run rollup",
		"postbuild": "npm run uglify && node banner.js",
		"pretest": "npm run build",
		"test": "npm run mocha"
	},

	"engines": {
		"node": ">= 0.10.0"
	},

	"dependencies": {
		"@zayesh/eventdispatcher": "x.x.x"
	},

	"devDependencies": {
		"jshint": "2.x.x",
		"mocha": "2.x.x",
		"prepend-file": "1.x.x",
		"rollup": "0.x.x",
		"uglify-js": "2.x.x",
		"yuidocjs": "0.x.x"
	}
}
